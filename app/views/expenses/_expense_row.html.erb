<% opportunity = expense.opportunities.first %>

<div class="expense-row">
  <!-- Unified responsive layout -->
  <div class="d-flex flex-column flex-md-row align-items-start align-items-md-center gap-2 gap-md-3">
    <!-- Icon + Category -->
    <div class="d-flex align-items-center gap-2 expense-row-category">
      <div class="expense-icon">
        <%= category_emoji(expense.category) %>
      </div>
      <div class="expense-category fw-bold">
        <%= expense.category.name %>
      </div>
    </div>

    <!-- Label (flexible, grows to fill space on desktop) -->
    <div class="flex-grow-1 expense-row-label">
      <span class="expense-label text-muted small">
        <%= expense.label %>
        <% if expense.respond_to?(:grouped?) && expense.grouped? %>
          <span class="badge bg-secondary ms-1">×<%= expense.grouped_expenses.size %></span>
        <% end %>
      </span>
    </div>

    <!-- Amount + Savings (stacked on mobile, inline on desktop) -->
    <div class="d-flex flex-column flex-md-row align-items-start align-items-md-center gap-2 gap-md-3">
      <div class="d-flex align-items-baseline gap-2">
        <span class="expense-amount fw-bold">
          <%= number_to_currency(expense.subtotal, unit: "€", precision: 2, separator: ",", delimiter: " ") %>
        </span>

        <% if opportunity&.opportunity? && opportunity.savings > 0 %>
          <span class="expense-savings text-primary">
            -<%= number_to_currency(opportunity.savings, unit: "€", precision: 0, separator: ",", delimiter: " ") %>
          </span>
        <% end %>
      </div>

      <!-- Action Button -->
      <div class="expense-row-action">
        <%= render "opportunities/action_button",
                   expense: expense,
                   opportunity: opportunity,
                   statement: statement %>
      </div>
    </div>
  </div>
</div>
