<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="mb-1">Mes relevés</h1>
      <p class="text-muted mb-0">Suivez vos dépenses et économies potentielles</p>
    </div>
    <%= link_to new_statement_path, class: "btn btn-success" do %>
      <i class="fas fa-plus me-2"></i>
      Nouveau relevé
    <% end %>
  </div>

  <% if @statements.any? %>
    <div class="row g-4">
      <% @statements.each do |statement| %>
        <% opportunities_count = statement.expenses.joins(:opportunities).count %>
        <% total_savings = statement.expenses.joins(:opportunities).includes(:opportunities).sum { |e| e.opportunities.sum(&:savings) } %>

        <div class="col-md-6 col-lg-4">
          <%= link_to statement, class: "text-decoration-none" do %>
            <div class="gov-tile">
              <div class="d-flex justify-content-between align-items-start">
                <h3 class="gov-tile__title"><%= statement.date.strftime("%B %Y").capitalize %></h3>
                <% if opportunities_count > 0 %>
                  <span class="gov-tile__tag"><%= opportunities_count %> détectées</span>
                <% end %>
              </div>

              <div class="mt-auto">
                <small class="text-muted text-uppercase" style="font-size: 0.7rem; letter-spacing: 1px;">Économies possibles</small>
                <div class="gov-tile__amount text-success">
                  <%= number_to_currency(total_savings, unit: "€", precision: 0) %>
                </div>
                <div class="d-flex justify-content-between border-top pt-2 mt-2">
                  <span class="text-muted small">Dépenses</span>
                  <span class="fw-bold"><%= number_to_currency(statement.expenses.sum(:subtotal), unit: "€", precision: 0) %></span>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-5">
      <div class="mb-3">
        <i class="fas fa-inbox fa-3x text-muted"></i>
      </div>
      <p class="text-muted">Aucun relevé pour le moment.</p>
      <p class="text-muted small">Importez votre premier relevé pour commencer à économiser</p>
    </div>
  <% end %>
</div>
