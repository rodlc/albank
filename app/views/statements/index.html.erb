<div class="container mt-4 mt-md-5">
  <div class="d-flex flex-column flex-md-row justify-content-between align-items-stretch align-items-md-center mb-4 gap-3">
    <div>
      <h1 class="mb-2">
        <span class="underline-cyan">Mes relev√©s</span>
      </h1>

      <p class="text-muted mb-0">
        Suivez vos d√©penses et √©conomies potentielles
      </p>
    </div>

    <%= link_to root_path, class: "btn btn-gov-primary" do %>
      <i class="fas fa-plus me-2"></i>
      Nouveau relev√©
    <% end %>
  </div>

  <% if @statements.any? %>
    <div class="row g-4">
      <% @statements.each do |statement| %>
        <% 
           expenses = statement.expenses.includes(:opportunities)
           total_amount = expenses.sum(&:subtotal)
           
           fraude_expenses = expenses.select { |e| e.opportunities.any?(&:danger?) }
           fraude_amount = fraude_expenses.sum(&:subtotal)
           fraude_count = fraude_expenses.count
           
           economie_expenses = expenses.select { |e| e.opportunities.any?(&:opportunity?) }
           economie_amount = economie_expenses.sum { |e| e.opportunities.find(&:opportunity?)&.savings || 0 }
           economie_count = economie_expenses.count

           status_class = if fraude_amount > 0
                            "status-danger"
                          elsif economie_amount > 0
                            "status-opportunity"
                          elsif expenses.any? { |e| e.opportunities.any?(&:success?) }
                            "status-success"
                          else
                            ""
                          end
        %>

        <div class="col-md-6 col-lg-4">
          <div class="position-relative h-100">
            <%= link_to statement, class: "text-decoration-none h-100 d-block" do %>
              <div class="smart-card <%= status_class %> h-100 d-flex flex-column pb-3">
                <div class="mb-3 pe-4">
                  <h3 class="smart-card__title mb-1 text-truncate">
                    <span class="me-2">üìÑ</span>
                    <%= l(statement.date, format: "%B %Y").capitalize %>
                  </h3>
                  <div class="text-muted small">Compte courant</div>
                </div>

                <div class="d-flex flex-column justify-content-center gap-2 mb-3" style="min-height: 3.5rem;">
                  <% if fraude_count > 0 %>
                    <div class="d-flex justify-content-between align-items-center">
                      <span class="badge bg-danger-subtle text-danger rounded-pill">
                        Fraude d√©tect√©e
                      </span>
                      <span class="fw-bold text-danger">
                        <i class="fas fa-caret-up small me-1"></i><%= number_to_currency(fraude_amount, unit: "‚Ç¨", precision: 0) %>
                      </span>
                    </div>
                  <% end %>

                  <% if economie_count > 0 %>
                    <div class="d-flex justify-content-between align-items-center">
                      <span class="badge bg-primary-subtle text-primary rounded-pill">
                        √âconomie possible
                      </span>
                      <span class="fw-bold text-primary">
                        <i class="fas fa-caret-up small me-1"></i><%= number_to_currency(economie_amount, unit: "‚Ç¨", precision: 0) %>
                      </span>
                    </div>
                  <% end %>

                  <% if fraude_count == 0 && economie_count == 0 %>
                    <div class="text-muted fst-italic small text-center">
                      Aucune anomalie
                    </div>
                  <% end %>
                </div>

                <div class="mt-auto border-top pt-3">
                  <div class="d-flex justify-content-between align-items-center">
                    <span class="text-muted small text-uppercase fw-semibold">Total</span>
                    <span class="fs-5 fw-bold text-dark">
                      <%= number_to_currency(total_amount, unit: "‚Ç¨", precision: 0) %>
                    </span>
                  </div>
                </div>
              </div>
            <% end %>

            <%= button_to statement_path(statement),
                method: :delete,
                data: { turbo_confirm: "Supprimer ce relev√© et toutes ses d√©penses ?" },
                class: "btn-close position-absolute top-0 end-0 m-3",
                style: "z-index: 10;",
                form: { class: "d-inline" } do %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-5">
      <div class="mb-3 fs-1" aria-hidden="true">üì≠</div>

      <p class="text-muted">Aucun relev√© pour le moment.</p>

      <p class="text-muted small">
        Importez votre premier relev√© pour commencer √† √©conomiser
      </p>
    </div>
  <% end %>
</div>
