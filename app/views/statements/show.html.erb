<div class="container mt-5">
  <div class="mb-4">
    <%= link_to statements_path, class: "text-decoration-none text-muted small fw-bold" do %>
      <span class="me-1">‚Üê</span> RETOUR AUX RELEV√âS
    <% end %>
  </div>

  <!-- Header -->
  <div class="mb-4">
    <h1 class="fw-bold mb-2">
      <span class="underline-cyan">
        Relev√© de <%= l(@statement.date, format: "%B %Y").capitalize %>
      </span>
    </h1>
    <p class="text-muted mb-0">Analyse d√©taill√©e des transactions</p>
  </div>

  <!-- Synth√®se responsive -->
  <% total_dangers = @expenses.select { |e| e.opportunities.first&.result_type == "danger" }.sum(&:subtotal) %>
  <% total_savings = @expenses.joins(:opportunities).sum { |e| e.opportunities.sum(&:savings) } %>

  <div class="row g-3 mb-4">
    <!-- Total -->
    <div class="col-12 col-md-4">
      <div class="card border-0 shadow-soft h-100">
        <div class="card-body text-center">
          <div class="text-muted small text-uppercase fw-semibold mb-2">
            <span aria-hidden="true">üí∞</span> Total
          </div>
          <div class="fs-2 fw-bold text-dark">
            <%= number_to_currency(@expenses.sum(&:subtotal), unit: "‚Ç¨", precision: 0, separator: " ", delimiter: " ") %>
          </div>
        </div>
      </div>
    </div>

    <!-- Fraudes -->
    <% if total_dangers > 0 %>
      <div class="col-12 col-md-4">
        <div class="card border-0 shadow-soft h-100 bg-danger-light">
          <div class="card-body text-center">
            <div class="text-danger small text-uppercase fw-semibold mb-2">
              <span aria-hidden="true">‚ö†Ô∏è</span> Fraudes d√©tect√©es
            </div>
            <div class="fs-2 fw-bold text-danger">
              <%= number_to_currency(total_dangers, unit: "‚Ç¨", precision: 0, separator: " ", delimiter: " ") %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- √âconomies potentielles -->
    <% if total_savings > 0 %>
      <div class="col-12 col-md-4">
        <div class="card border-0 shadow-soft h-100 bg-success-light">
          <div class="card-body text-center">
            <div class="text-success small text-uppercase fw-semibold mb-2">
              <span aria-hidden="true">üí°</span> √âconomies possibles
            </div>
            <div class="fs-2 fw-bold text-success">
              <%= number_to_currency(total_savings, unit: "‚Ç¨", precision: 0, separator: " ", delimiter: " ") %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <% if @expenses.any? %>
    <div class="accordion expenses-accordion" id="expensesAccordion">
      <% grouped = @expenses.group_by { |e| e.opportunities.first&.result_type } %>

      <% [:danger, :opportunity, :success].each_with_index do |type, i| %>
        <% next unless (expenses = grouped[type.to_s])&.any? %>
        <%= render "expenses/accordion_section",
                   result_type: type,
                   expenses: expenses,
                   statement: @statement,
                   index: i %>
      <% end %>

      <% if (autres = grouped[nil])&.any? %>
        <%= render "expenses/accordion_section",
                   result_type: nil,
                   expenses: autres,
                   statement: @statement,
                   index: 3 %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-5">
      <div class="mb-3 fs-1 opacity-50">
        üßæ
      </div>

      <p class="text-muted">Aucune d√©pense trouv√©e dans ce relev√©.</p>
    </div>
  <% end %>
</div>
