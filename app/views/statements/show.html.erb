<div class="container mt-5">
  <div class="mb-4">
    <%= link_to statements_path, class: "text-decoration-none text-muted small fw-bold" do %>
      <span class="me-1">‚Üê</span> RETOUR AUX RELEV√âS
    <% end %>
  </div>

  <%= turbo_frame_tag "statement_content",
      src: (@statement.processing? ? statement_path(@statement) : nil),
      data: { turbo_frame_refresh: "morph" },
      refresh: "2000" do %>

    <% if @statement.processing? %>
      <%= render "statements/processing" %>
    <% elsif @statement.failed? %>
      <%= render "statements/failed" %>
    <% else %>

  <div class="d-flex justify-content-between align-items-end mb-5">
    <div>
      <h1 class="fw-bold mb-1">
        <span class="underline-cyan">
          Relev√© de <%= l(@statement.date, format: "%B %Y").capitalize %>
        </span>
      </h1>

      <p class="text-muted mb-0">Analyse d√©taill√©e des transactions</p>
    </div>

    <div class="d-flex gap-4">
      <div class="text-end">
        <span class="d-block text-muted small text-uppercase fw-bold">
          Total
        </span>

        <span class="fs-2 fw-bold">
          <%= number_to_currency(@expenses.sum(&:subtotal), unit: "‚Ç¨", precision: 0) %>
        </span>
      </div>

      <% total_dangers = @expenses.select { |e| e.opportunities.first&.result_type == "danger" }.sum(&:subtotal) %>
      <% if total_dangers > 0 %>
        <div class="text-end">
          <span class="d-block text-muted small text-uppercase fw-bold">
            Fraudes
          </span>

          <span class="fs-2 fw-bold text-danger">
            <%= number_to_currency(total_dangers, unit: "‚Ç¨", precision: 0) %>
          </span>
        </div>
      <% end %>

      <% total_savings = @expenses.joins(:opportunities).sum { |e| e.opportunities.sum(&:savings) } %>
      <% if total_savings > 0 %>
        <div class="text-end">
          <span class="d-block text-muted small text-uppercase fw-bold">
            √âconomies
          </span>

          <span class="fs-2 fw-bold text-primary">
            <%= number_to_currency(total_savings, unit: "‚Ç¨", precision: 0) %>
          </span>
        </div>
      <% end %>
    </div>
  </div>

  <% if @expenses.any? %>
    <div class="accordion expenses-accordion" id="expensesAccordion">
      <% grouped = @expenses.group_by { |e| e.opportunities.first&.result_type } %>

      <% [:danger, :opportunity, :success].each_with_index do |type, i| %>
        <% next unless (expenses = grouped[type.to_s])&.any? %>
        <%= render "expenses/accordion_section",
                   result_type: type,
                   expenses: expenses,
                   statement: @statement,
                   index: i %>
      <% end %>

      <% if (autres = grouped[nil])&.any? %>
        <%= render "expenses/accordion_section",
                   result_type: nil,
                   expenses: autres,
                   statement: @statement,
                   index: 3 %>
      <% end %>
    </div>

    <%# Section calcul√©e : D√©penses non cibl√©es %>
    <% autres_total = (@statement.total || 0) - @expenses.sum(&:subtotal) %>
    <% if autres_total > 0 %>
      <div class="accordion-item accordion-secondary mt-2">
        <h2 class="accordion-header">
          <button class="accordion-button collapsed" type="button"
                  data-bs-toggle="collapse" data-bs-target="#section-autres"
                  aria-expanded="false" aria-controls="section-autres"
                  aria-label="D√©penses non cibl√©es : <%= number_to_currency(autres_total, unit: '‚Ç¨') %>">
            <span class="section-emoji">üí≥</span>
            <span class="section-label">D√©penses non cibl√©es</span>
            <span class="section-totals ms-auto">
              <%= number_to_currency(autres_total, unit: "‚Ç¨", precision: 0) %>
            </span>
            <span class="section-action">Voir</span>
          </button>
        </h2>
        <div id="section-autres" class="accordion-collapse collapse">
          <div class="accordion-body text-muted">
            Achats CB, virements, et autres transactions ponctuelles non analys√©es.
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="text-center py-5">
      <div class="mb-3 fs-1 opacity-50">
        üßæ
      </div>

      <p class="text-muted">Aucune d√©pense trouv√©e dans ce relev√©.</p>
    </div>
  <% end %>

    <% end %>
  <% end %>
</div>
