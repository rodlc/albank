<div class="container mt-4 mt-md-5">
  <div class="mb-4">
    <%= link_to statements_path, class: "text-decoration-none text-muted small fw-semibold" do %>
      <span class="me-1" aria-hidden="true">‚Üê</span> Retour aux relev√©s
    <% end %>
  </div>

  <!-- Header avec stats inline (Target design) -->
  <% grouped = @expenses.group_by { |e| e.opportunities.first&.result_type } %>
  
  <% total_amount = @expenses.sum(&:subtotal) %>
  <% fraude_amount = grouped['danger']&.sum(&:subtotal) || 0 %>
  <% economie_amount = grouped['opportunity']&.sum { |e| e.opportunities.first.savings } || 0 %>
  <% optimise_gain = grouped['success']&.sum { |e| (e.opportunities.first.standard.average_amount - e.subtotal) } || 0 %>

  <div class="statement-header mb-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-end gap-3 mb-3">
      <!-- Left: Title -->
      <div>
        <h1 class="mb-2">
          Relev√© de <span class="underline-cyan"><%= l(@statement.date, format: "%B %Y").capitalize %></span>
        </h1>
        <p class="text-muted mb-0">Analyse d√©taill√©e des transactions</p>
      </div>

      <!-- Right: Inline stats -->
      <div class="d-flex flex-row gap-3 gap-md-4 align-items-start align-items-md-end flex-wrap">
        <div class="text-start text-md-end">
          <div class="text-uppercase text-muted small fw-semibold mb-1">Total</div>
          <div class="h3 fw-bold mb-0">
            <%= number_to_currency(total_amount, unit: "‚Ç¨", precision: 0, separator: ",", delimiter: " ") %>
          </div>
        </div>

        <% if fraude_amount > 0 %>
          <div class="text-start text-md-end">
            <div class="text-uppercase text-danger small fw-semibold mb-1">Fraude</div>
            <div class="h3 fw-bold text-danger mb-0">
              <i class="fas fa-arrow-trend-up small me-1"></i><%= number_to_currency(fraude_amount, unit: "‚Ç¨", precision: 0, separator: ",", delimiter: " ") %>
            </div>
          </div>
        <% end %>

        <% if economie_amount > 0 %>
          <div class="text-start text-md-end">
            <div class="text-uppercase text-primary small fw-semibold mb-1">√âconomie</div>
            <div class="h3 fw-bold text-primary mb-0">
              <i class="fas fa-arrow-trend-up small me-1"></i><%= number_to_currency(economie_amount, unit: "‚Ç¨", precision: 0, separator: ",", delimiter: " ") %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <% if @expenses.any? %>
    <div class="accordion expenses-accordion" id="expensesAccordion">
      <% rendered_count = 0 %>
      <% [:danger, :opportunity, :success].each do |type| %>
        <% next unless (expenses = grouped[type.to_s])&.any? %>
        <%= render "expenses/accordion_section",
                   result_type: type,
                   expenses: expenses,
                   statement: @statement,
                   index: rendered_count %>
        <% rendered_count += 1 %>
      <% end %>

      <% if (autres = grouped[nil])&.any? %>
        <%= render "expenses/accordion_section",
                   result_type: nil,
                   expenses: autres,
                   statement: @statement,
                   index: rendered_count %>
        <% rendered_count += 1 %>
      <% end %>

      <!-- Section calcul√©e : Autres d√©penses (non reconnues par le LLM) -->
      <% autres_amount = @statement.unrecognized_amount %>

      <% if autres_amount > 0 %>
        <div class="accordion-item accordion-secondary">
          <h2 class="accordion-header">
            <button
              class="accordion-button collapsed"
              type="button"
              data-bs-toggle="collapse"
              data-bs-target="#collapseAutres"
              aria-expanded="false"
              aria-controls="collapseAutres"
              aria-label="Autres d√©penses : total <%= number_to_currency(autres_amount, unit: '‚Ç¨', precision: 0, separator: ',', delimiter: ' ') %>"
            >
              <div class="d-flex align-items-center gap-2 flex-grow-1">
                <span class="section-emoji">üí≥</span>
                <span class="section-label">Autres d√©penses</span>
              </div>

              <!-- Desktop Alignment Wrapper -->
              <div class="d-none d-md-flex align-items-center gap-4 ms-auto">
                <div class="fw-bold text-end" style="min-width: 100px;">
                  <%= number_to_currency(autres_amount, unit: "‚Ç¨", precision: 0, separator: ",", delimiter: " ") %>
                </div>
                <div style="min-width: 100px;"></div>
                <div class="d-flex align-items-center justify-content-center gap-2" style="width: 140px;">
                  Voir <i class="fas fa-chevron-down transition-transform"></i>
                </div>
              </div>

              <!-- Mobile Totals -->
              <div class="d-md-none ms-auto d-flex flex-column align-items-end">
                <span class="fw-bold">
                  <%= number_to_currency(autres_amount, unit: "‚Ç¨", precision: 0, separator: ",", delimiter: " ") %>
                </span>
              </div>
            </button>
          </h2>
          <div id="collapseAutres" class="accordion-collapse collapse" data-bs-parent="#expensesAccordion">
            <div class="accordion-body p-4">
              <p class="mb-0 text-muted">
                D√©penses non reconnues ou hors p√©rim√®tre Albank (alimentation, transports, loisirs...).
              </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-5">
      <div class="mb-3 fs-1 opacity-50">
        üßæ
      </div>

      <p class="text-muted">Aucune d√©pense trouv√©e dans ce relev√©.</p>
    </div>
  <% end %>
</div>
