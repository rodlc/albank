<div class="container mt-4">
  <%= link_to "← Retour aux relevés", statements_path, class: "btn btn-link" %>

  <h1><%= @statement.category.name %></h1>

  <p class="lead">
    Vous payez <strong><%= @statement.amount %>€</strong> par mois
    <br>
    <small class="text-muted"><%= @statement.date.strftime("%B %Y") %></small>
  </p>

  <% if @statement.opportunities.any? %>
    <h3 class="mt-4">Opportunités d'économie</h3>
    <%= render partial: "shared/opportunity_card", collection: @statement.opportunities, as: :opportunity %>
  <% else %>
    <div class="alert alert-info">
      Aucune opportunité d'économie détectée pour le moment.
    </div>
  <% end %>
</div>
