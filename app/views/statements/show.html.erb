<div class="container mt-5">
  <div class="mb-4">
    <%= link_to statements_path, class: "text-decoration-none text-muted small fw-semibold" do %>
      <span class="me-1" aria-hidden="true">‚Üê</span> Retour aux relev√©s
    <% end %>
  </div>

  <!-- Header avec stats inline (Target design) -->
  <% total_dangers = @expenses.select { |e| e.opportunities.first&.result_type == "danger" }.sum(&:subtotal) %>
  <% total_savings = @expenses.joins(:opportunities).sum { |e| e.opportunities.sum(&:savings) } %>
  <% total_opportunities = @expenses.joins(:opportunities).count %>

  <div class="statement-header mb-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-end gap-3 mb-3">
      <!-- Left: Title -->
      <div>
        <h1 class="mb-2">
          Relev√© de <span class="underline-cyan"><%= l(@statement.date, format: "%B %Y").capitalize %></span>
        </h1>
        <p class="text-muted mb-0">Analyse d√©taill√©e des transactions</p>
      </div>

      <!-- Right: Inline stats -->
      <div class="d-flex gap-4 align-items-end">
        <div class="text-end">
          <div class="text-uppercase text-muted small fw-semibold mb-1">Total</div>
          <div class="h3 fw-bold mb-0">
            <%= number_to_currency(@expenses.sum(&:subtotal), unit: "‚Ç¨", precision: 0, separator: " ", delimiter: " ") %>
          </div>
        </div>

        <% if total_dangers > 0 %>
          <div class="text-end">
            <div class="text-uppercase text-danger small fw-semibold mb-1">Fraudes</div>
            <div class="h3 fw-bold text-danger mb-0">
              <%= number_to_currency(total_dangers, unit: "‚Ç¨", precision: 0, separator: " ", delimiter: " ") %>
            </div>
          </div>
        <% end %>

        <% if total_savings > 0 %>
          <div class="text-end">
            <div class="text-uppercase text-primary small fw-semibold mb-1">√âconomies</div>
            <div class="h3 fw-bold text-primary mb-0">
              <%= number_to_currency(total_savings, unit: "‚Ç¨", precision: 0, separator: " ", delimiter: " ") %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Badge opportunit√©s (sous le header si pr√©sent) -->
    <% if total_opportunities > 0 %>
      <div class="d-inline-flex">
        <span class="badge bg-primary rounded-pill px-3 py-2">
          <span aria-hidden="true">üí°</span> <%= total_opportunities %> opportunit√©<%= total_opportunities > 1 ? 's' : '' %>
        </span>
      </div>
    <% end %>
  </div>

  <% if @expenses.any? %>
    <div class="accordion expenses-accordion" id="expensesAccordion">
      <% grouped = @expenses.group_by { |e| e.opportunities.first&.result_type } %>

      <% [:danger, :opportunity, :success].each_with_index do |type, i| %>
        <% next unless (expenses = grouped[type.to_s])&.any? %>
        <%= render "expenses/accordion_section",
                   result_type: type,
                   expenses: expenses,
                   statement: @statement,
                   index: i %>
      <% end %>

      <% if (autres = grouped[nil])&.any? %>
        <%= render "expenses/accordion_section",
                   result_type: nil,
                   expenses: autres,
                   statement: @statement,
                   index: 3 %>
      <% end %>

      <!-- Section calcul√©e : Autres d√©penses (non reconnues par le LLM) -->
      <% recognized_total = @expenses.sum(&:subtotal) %>
      <% statement_total = @statement.total&.abs || recognized_total %>
      <% autres_amount = statement_total - recognized_total %>

      <% if autres_amount > 0 %>
        <div class="accordion-item accordion-secondary">
          <h2 class="accordion-header">
            <button
              class="accordion-button collapsed"
              type="button"
              data-bs-toggle="collapse"
              data-bs-target="#collapseAutres"
              aria-expanded="false"
              aria-controls="collapseAutres"
              aria-label="D√©penses non cibl√©es : total <%= number_to_currency(autres_amount, unit: '‚Ç¨') %>"
            >
              <div class="d-flex align-items-center gap-2 flex-grow-1">
                <span class="section-emoji">üí≥</span>
                <span class="section-label">D√©penses non cibl√©es</span>
              </div>
              <span class="section-totals ms-auto">
                <%= number_to_currency(autres_amount, unit: "‚Ç¨", precision: 0) %>
              </span>
              <span class="section-action d-none d-md-inline">Voir</span>
            </button>
          </h2>
          <div id="collapseAutres" class="accordion-collapse collapse" data-bs-parent="#expensesAccordion">
            <div class="accordion-body">
              <div class="text-muted">
                D√©penses hors p√©rim√®tre AlBank (alimentation, transport, loisirs...)
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-5">
      <div class="mb-3 fs-1 opacity-50">
        üßæ
      </div>

      <p class="text-muted">Aucune d√©pense trouv√©e dans ce relev√©.</p>
    </div>
  <% end %>
</div>
