<div class="container mt-5">
  <%= link_to @statement, class: "text-decoration-none mb-3 d-inline-block" do %>
    <i class="fas fa-arrow-left me-2"></i>
    <span>Retour au relevé</span>
  <% end %>

  <div class="row justify-content-center">
    <div class="col-md-10">
      <!-- Header -->
      <div class="mb-4">
        <h1 class="mb-2">Opportunité d'économie détectée</h1>
        <p class="text-muted">
          <%= @opportunity.expense.category.name %> ·
          <%= l(@opportunity.expense.statement.date, format: :long) %>
        </p>
      </div>

      <!-- Résultat de l'analyse (Style Simulateur URSSAF) -->
      <div class="bg-light p-4 rounded mb-4">
        <h2 class="text-center mb-4" style="color: #1E1E1E;">Résultat de l'analyse</h2>

        <!-- Comparaison Avant / Après -->
        <div class="row g-4 mb-4">
          <div class="col-md-6">
            <div class="gov-tile" style="border-bottom: 4px solid #E1000F;">
              <span class="text-muted text-uppercase small">Ce que vous payez</span>
              <div class="gov-tile__amount" style="color: #E1000F;">
                <%= number_to_currency(@opportunity.expense.subtotal, unit: "€", precision: 0) %>
              </div>
              <small class="text-muted"><%= @opportunity.standard.unit %></small>
            </div>
          </div>
          <div class="col-md-6">
            <div class="gov-tile" style="border-bottom: 4px solid #18753C;">
              <span class="text-muted text-uppercase small">Prix du marché</span>
              <div class="gov-tile__amount" style="color: #18753C;">
                <%= number_to_currency(@opportunity.standard.average_amount, unit: "€", precision: 0) %>
              </div>
              <small class="text-muted"><%= @opportunity.standard.unit %></small>
            </div>
          </div>
        </div>

        <!-- Gain potentiel -->
        <div class="text-center mt-4">
          <p class="text-muted text-uppercase mb-2" style="font-size: 0.75rem; letter-spacing: 1px;">Économie potentielle</p>
          <div style="font-size: 3rem; font-weight: 800; color: #18753C;">
            <%= number_to_currency(@opportunity.savings, unit: "€", precision: 0) %>
          </div>
          <% savings_percentage = (@opportunity.savings / @opportunity.expense.subtotal * 100).round %>
          <p class="text-muted mt-2">soit <strong><%= savings_percentage %>%</strong> de réduction possible</p>
        </div>
      </div>

      <!-- Status & Actions -->
      <div class="card border-0 shadow-sm">
        <div class="card-body p-4">
          <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
              <h5 class="mb-2">Statut de l'opportunité</h5>
              <span class="opportunity-badge badge-<%= @opportunity.status %>">
                <i class="fas fa-circle" style="font-size: 0.5rem;"></i>
                <%= @opportunity.status.humanize %>
              </span>
            </div>
          </div>

          <%= form_with(model: [@statement, @expense, @opportunity], method: :patch, local: true) do |f| %>
            <div class="d-flex gap-2">
              <%= f.button "Marquer comme contacté",
                  name: "opportunity[status]",
                  value: "contacted",
                  class: "btn-gov-outline",
                  disabled: @opportunity.contacted? || @opportunity.completed? %>

              <%= f.button "Marquer comme complété",
                  name: "opportunity[status]",
                  value: "completed",
                  class: "btn-gov-primary",
                  disabled: @opportunity.completed? %>
            </div>
          <% end %>

          <p class="text-muted small mt-3 mb-0">
            <i class="fas fa-info-circle me-1"></i>
            En passant à un fournisseur au prix moyen du marché
          </p>
        </div>
      </div>

      <!-- Negotiation Letter -->
      <%= render 'negotiation_letter' %>
    </div>
  </div>
</div>
