              <%= number_to_currency(@opportunity.standard.average_amount, unit: "‚Ç¨", precision: 0) %>
            </div>
            <div class="small mt-2" style="color: #059669;"><%= @opportunity.standard.unit %></div>

            <!-- Gain box -->
            <div class="mt-4 p-3 bg-white rounded border" style="border-color: rgba(5, 150, 105, 0.25) !important;">
              <span class="me-2">üí∞</span>
              <strong style="color: #059669;"><%= number_to_currency(@opportunity.savings, unit: "‚Ç¨", precision: 0) %> d'√©conomie</strong> / mois
            </div>
          </div>
        </div>

        <!-- Footer avec actions -->
        <div class="comparison-panel__footer">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <span class="opportunity-badge badge-<%= @opportunity.status %> me-2">
                <% status_emoji = case @opportunity.status
                     when 'pending' then '‚ö´'
                     when 'contacted' then 'üîµ'
                     when 'completed' then 'üü¢'
                     else '‚ö´'
                   end %>
                <span style="font-size: 0.5rem;"><%= status_emoji %></span>
