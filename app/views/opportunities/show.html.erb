        <!-- Actions group√©es -->
        <div class="opportunity-actions">
          <% unless @opportunity.danger? %>
            <button
              type="button"
              class="btn btn-primary"
              data-clipboard-target="button"
              data-action="click->clipboard#copy"
            >
              <span aria-hidden="true">üìã</span> Copier la lettre
            </button>

            <button
