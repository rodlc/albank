            <% end %>

            <% if @opportunity.completed? %>
              <button
                type="submit"
                name="opportunity[status]"
                value="pending"
                class="btn btn-soft"
              >
                <span aria-hidden="true">‚Ü©Ô∏è</span> Restaurer
              </button>
            <% end %>
          <% end %>
        </div>

        <!-- Feedback copie -->
