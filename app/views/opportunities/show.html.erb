<div class="container mt-5">
  <%= link_to @statement, class: "text-decoration-none mb-3 d-inline-block" do %>
    <i class="fas fa-arrow-left me-2"></i>
    <span>Retour au relevé</span>
  <% end %>

  <div class="row justify-content-center">
    <div class="col-md-10">
      <!-- Header -->
      <div class="mb-4">
        <h1 class="mb-2">Opportunité d'économie détectée</h1>
        <p class="text-muted">
          <%= @opportunity.expense.category.name %> ·
          <%= l(@opportunity.expense.statement.date, format: :long) %>
        </p>
      </div>

      <!-- Savings Highlight - Wise Style -->
      <div class="savings-highlight mb-5">
        <p class="text-muted mb-2">Économies potentielles</p>
        <div class="savings-amount">
          <%= number_to_currency(@opportunity.savings, unit: "€", precision: 0) %>
        </div>
        <% savings_percentage = (@opportunity.savings / @opportunity.expense.subtotal * 100).round %>
        <p class="savings-percentage mb-0">
          soit <strong><%= savings_percentage %>%</strong> de réduction possible
        </p>
      </div>

      <!-- Comparison Cards -->
      <div class="row g-4 mb-5">
        <div class="col-md-6">
          <div class="card h-100 border-0 shadow-sm">
            <div class="card-body p-4">
              <div class="d-flex align-items-start mb-3">
                <div class="category-icon me-3">
                  <i class="fas fa-receipt"></i>
                </div>
                <div>
                  <h5 class="mb-1">Votre dépense actuelle</h5>
                  <p class="text-muted small mb-0">Prix que vous payez</p>
                </div>
              </div>
              <p class="display-6 fw-bold mb-0">
                <%= number_to_currency(@opportunity.expense.subtotal, unit: "€") %>
              </p>
            </div>
          </div>
        </div>

        <div class="col-md-6">
          <div class="card h-100 border-0 shadow-sm">
            <div class="card-body p-4">
              <div class="d-flex align-items-start mb-3">
                <div class="category-icon me-3">
                  <i class="fas fa-chart-line"></i>
                </div>
                <div>
                  <h5 class="mb-1">Moyenne du marché</h5>
                  <p class="text-muted small mb-0"><%= @opportunity.standard.unit %></p>
                </div>
              </div>
              <p class="display-6 fw-bold mb-0">
                <%= number_to_currency(@opportunity.standard.average_amount, unit: "€") %>
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Status & Actions -->
      <div class="card border-0 shadow-sm">
        <div class="card-body p-4">
          <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
              <h5 class="mb-2">Statut de l'opportunité</h5>
              <span class="opportunity-badge badge-<%= @opportunity.status %>">
                <i class="fas fa-circle" style="font-size: 0.5rem;"></i>
                <%= @opportunity.status.humanize %>
              </span>
            </div>
          </div>

          <%= form_with(model: [@statement, @expense, @opportunity], method: :patch, local: true) do |f| %>
            <div class="d-flex gap-2">
              <%= f.button "Marquer comme contacté",
                  name: "opportunity[status]",
                  value: "contacted",
                  class: "btn btn-outline-primary",
                  disabled: @opportunity.contacted? || @opportunity.completed? %>

              <%= f.button "Marquer comme complété",
                  name: "opportunity[status]",
                  value: "completed",
                  class: "btn btn-success",
                  disabled: @opportunity.completed? %>
            </div>
          <% end %>

          <p class="text-muted small mt-3 mb-0">
            <i class="fas fa-info-circle me-1"></i>
            En passant à un fournisseur au prix moyen du marché
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
