<div class="container mt-5">
  <%= link_to @statement, class: "text-decoration-none mb-3 d-inline-block" do %>
    <i class="fas fa-arrow-left me-2"></i>
    <span>Retour au relevé</span>
  <% end %>

  <div class="row justify-content-center">
    <div class="col-md-10">
      <!-- Header -->
      <div class="mb-4">
        <h1 class="mb-2">Opportunité d'économie détectée</h1>
        <p class="text-muted">
          <%= @opportunity.expense.category.name %> ·
          <%= l(@opportunity.expense.statement.date, format: :long) %>
        </p>
      </div>

      <!-- Panneau de comparaison unifié (Modern UI) -->
      <% savings_percentage = (@opportunity.savings / @opportunity.expense.subtotal * 100).round %>
      <div class="comparison-panel mb-4">
        <!-- Header -->
        <div class="comparison-panel__header">
          <div>
            <h2>Analyse d'économie</h2>
            <p class="text-muted">Basé sur les prix du marché</p>
          </div>
          <span class="badge bg-success px-3 py-2 rounded-pill">
            <i class="fas fa-arrow-down me-1"></i>
            -<%= savings_percentage %>% possible
          </span>
        </div>

        <!-- Corps split-view -->
        <div class="row g-0">
          <!-- Colonne gauche : Actuel -->
          <div class="col-md-6 comparison-panel__left">
            <span class="d-block text-muted text-uppercase mb-2" style="font-size: 0.75rem; font-weight: 600; letter-spacing: 0.5px;">
              <i class="fas fa-receipt me-1"></i>
              Votre contrat actuel
            </span>
            <div class="display-4 fw-bold text-dark" style="letter-spacing: -0.02em;">
              <%= number_to_currency(@opportunity.expense.subtotal, unit: "€", precision: 0) %>
            </div>
            <div class="text-muted small mt-2"><%= @opportunity.standard.unit %></div>
          </div>

          <!-- Colonne droite : Nouveau (Highlight) -->
          <div class="col-md-6 comparison-panel__right">
            <span class="d-block text-uppercase mb-2" style="font-size: 0.75rem; font-weight: 600; letter-spacing: 0.5px; color: #059669;">
              <i class="fas fa-chart-line me-1"></i>
              Offre du marché
            </span>
            <div class="display-4 fw-bold" style="color: #059669; letter-spacing: -0.02em;">
              <%= number_to_currency(@opportunity.standard.average_amount, unit: "€", precision: 0) %>
            </div>
            <div class="small mt-2" style="color: #059669;"><%= @opportunity.standard.unit %></div>

            <!-- Gain box -->
            <div class="mt-4 p-3 bg-white rounded border" style="border-color: rgba(5, 150, 105, 0.25) !important;">
              <i class="fas fa-coins text-warning me-2"></i>
              <strong style="color: #059669;"><%= number_to_currency(@opportunity.savings, unit: "€", precision: 0) %> d'économie</strong> / mois
            </div>
          </div>
        </div>

        <!-- Footer avec actions -->
        <div class="comparison-panel__footer">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <span class="opportunity-badge badge-<%= @opportunity.status %> me-2">
                <i class="fas fa-circle" style="font-size: 0.5rem;"></i>
                <%= @opportunity.status.humanize %>
              </span>
              <span class="text-muted small">
                <i class="fas fa-info-circle me-1"></i>
                En passant à un fournisseur au prix moyen du marché
              </span>
            </div>

            <%= form_with(model: [@statement, @expense, @opportunity], method: :patch, local: true, html: { class: "d-inline-flex gap-2" }) do |f| %>
              <%= f.button "Marquer comme contacté",
                  name: "opportunity[status]",
                  value: "contacted",
                  class: "btn-gov-outline",
                  disabled: @opportunity.contacted? || @opportunity.completed? %>

              <%= f.button "Marquer comme complété",
                  name: "opportunity[status]",
                  value: "completed",
                  class: "btn-gov-primary",
                  disabled: @opportunity.completed? %>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Negotiation Letter -->
      <%= render 'negotiation_letter' %>
    </div>
  </div>
</div>
