<div class="auth-container">
  <div class="auth-card">
    <div class="text-center mb-4">
      <%= image_tag "logo-cochon.svg", height: 80, alt: "AlBank", class: "mb-3" %>

      <h1 class="h3 mb-2">Se connecter</h1>

      <p class="text-muted">Accédez à vos relevés et économies</p>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    label: "Email",
                    input_html: { autocomplete: "email" } %>

        <%= f.input :password,
                    required: false,
                    label: "Mot de passe",
                    hint: false,
                    input_html: { autocomplete: "current-password" } %>

        <%= f.input :remember_me,
                    as: :boolean,
                    label: "Se souvenir de moi" if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Se connecter", class: "btn btn-gov-primary" %>
      </div>
    <% end %>

    <div class="auth-links"><%= render "devise/shared/links" %></div>
  </div>
</div>
